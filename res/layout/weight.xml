<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"  
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
  
  <RelativeLayout
 	
  android:id="@+id/graph_frame"   
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/weightback"
  >
  
  <RelativeLayout 	
  android:id="@+id/uiframe"   
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="130dp"
  android:background="@drawable/weightback"
  >
  
  <LinearLayout 
  android:orientation="horizontal"
  android:layout_width="300dp"
  android:layout_height="40dp"
  android:layout_centerHorizontal="true"
  android:layout_marginTop="10dp"
  android:gravity="center"
  >
  <Button 
  android:orientation="vertical"
  android:layout_width="30dp"
  android:layout_height="30dp"
  android:background="@drawable/round_arrow_left_icon48"
  android:layout_marginRight="10dp"
  />
  <TextView 
  android:id="@+id/period"
  android:textSize="20dp"
  android:textColor="#999999"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="体重期間"
  android:layout_centerHorizontal="true"
  android:gravity="center"/>
  
  
  <Button 
  android:orientation="vertical"
  android:layout_width="30dp"
  android:layout_height="30dp"
  android:background="@drawable/round_arrow_right_icon48"
  android:layout_marginLeft="10dp"
  />
  
  </LinearLayout>
  <RelativeLayout   
  android:orientation="vertical"
  android:layout_width="190dp"
  android:layout_height="40dp"
  android:layout_centerHorizontal="true"
  android:layout_marginTop="70dp"
  >
  <ImageButton
  android:id="@+id/nowweightbtn" 
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/whitebutton"
  />
  <TextView 
  android:id="@+id/wtitle"
  android:text="現在の体重"
  android:textSize="15dp"
  android:textColor="#222222"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"  
  android:gravity="center_vertical"
  android:layout_marginLeft="10dp"
  />
  <TextView 
  android:id="@+id/nowweighttext"
  android:text="120.05"
  android:textSize="18dp"
  android:textColor="#FFFFFF"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"  
  android:gravity="center_vertical"
  android:layout_marginLeft="90dp"
  />
  <TextView   
  android:text="kg"
  android:textSize="15dp"
  android:textColor="#222222"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:gravity="center_vertical"  
  android:layout_marginLeft="150dp"
  />
  
  <ImageView 
  android:layout_width="20dp"
  android:layout_height="20dp"
  android:background="@drawable/br_next_icon48"
  android:layout_alignParentRight="true"
  android:layout_centerVertical="true"
  android:layout_marginRight="7dp"
  />
  </RelativeLayout>
  </RelativeLayout>
 <FrameLayout
  
 android:layout_width="fill_parent"
  android:layout_height="300dp"
  android:layout_alignParentBottom="true"
  >
  <com.freeworks.kukuri.MyGLView
  android:id="@+id/glview"  
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  />
 
 

 </FrameLayout>
 
</RelativeLayout>  
</RelativeLayout>
